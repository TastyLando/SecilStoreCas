@model IEnumerable<DataAccess.Models.ConfigurationRecord>
@{
    ViewData["Title"] = "Konfigürasyon Kayıtları";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

            <div class="mb-3 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Yeni Kayıt Ekle
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Type)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Value)</th>
                            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ApplicationName)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td>@Html.DisplayFor(modelItem => item.Value)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                <td>@Html.DisplayFor(modelItem => item.ApplicationName)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fa fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ml-1">
                                        <i class="fa fa-info-circle"></i> Detay
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-1">
                                        <i class="fa fa-trash-alt"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
