@model DataAccess.Models.ConfigurationRecord

@{
    ViewData["Title"] = "Konfigürasyon Ekle";
}

<div class="container">
    <h1 class="text-center mb-4">Konfigürasyon Ekle</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Konfigürasyon Formu
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Type" class="form-label">Type</label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Value" class="form-label">Value</label>
                            <input asp-for="Value" class="form-control" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="ApplicationName" class="form-label">Application Name</label>
                            <input asp-for="ApplicationName" class="form-control" />
                            <span asp-validation-for="ApplicationName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit"  class="btn btn-primary me-2">Ekle</button>
                            <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
